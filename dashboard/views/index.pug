doctype html
html
  head
    meta(charset='utf-8')
    title NGO Security Dashboard
    link(rel='stylesheet', href='/static/style.css')
  body
    header
      h1 NGO Security Dashboard
      p View and download generated scan reports
    main
      if reports.length === 0
        p No reports yet. Run scanners first.
      else
        ul
          each r in reports
            li
              a(href=`/report/${r}`)= r
